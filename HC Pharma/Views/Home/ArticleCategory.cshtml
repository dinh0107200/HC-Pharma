
@model HC_Pharma.ViewModel.ArticleCategoryViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Tin tức";
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("AllArticle", "Home");
    ViewBag.Robots = "noindex"; ViewBag.Title = Model.Category.TitleMeta ?? Model.Category.CategoryName;
    ViewBag.Description = Model.Category.DescriptionMeta ?? Model.Category.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("ArticleCategory", "Home", new { url = Model.Category.Url });
}


<section>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fas fa-home-lg-alt"></i>Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.Category.CategoryName</a></li>
            </ol>
        </nav>
    </div>

</section>
<section class="list-artilce">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @if (Model.Articles.Any())
                {
                    <div class="row">
                        @foreach (var item in Model.Articles)
                        {
                            <div class="col-lg-6 col-md-6 col-12">
                                @Html.Partial("_ItemArticle", item)
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
                    </div>
                }
                @if (Model.Articles.PageCount > 1)
                {
                    <div class="col-12 text-center mt-3">
                        @Html.PagedListPager(Model.Articles, page => Url.Action("AllArticle", new { page }))
                    </div>
                }

            </div>
            <div class="col-lg-4">
                <div class="artilce-nav mb-4">
                    <div class="artilce-nav-title">
                        Bài viết mới nhất
                    </div>
                    @Html.Action("MenuArticle", "Home")
                </div>
            </div>
        </div>
    </div>
</section>