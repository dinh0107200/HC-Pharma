
@model HC_Pharma.ViewModel.ArticleCategoryViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = Model.Category.TitleMeta ?? Model.Category.CategoryName;
    ViewBag.Description = Model.Category.DescriptionMeta ?? Model.Category.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("ArticleCategory", "Home", new { url = Model.Category.Url });
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fas fa-home-lg-alt"></i>Trang chủ</a></li>
            @if (Model.RootCategory != null)
            {
                <li class="breadcrumb-item"><a href="@Url.Action("ArticleCategory", new{url = Model.RootCategory.Url})">@Model.RootCategory.CategoryName</a></li>
            }
            <li class="breadcrumb-item active">@Model.Category.CategoryName</li>
        </ol>
    </nav>
</div>
<section class="list-artilce">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @if (Model.Articles.Any())
                {
                    foreach (var item in Model.Articles)
                    {
                        <div class="media media-mobile">
                            @Html.Partial("_ItemArticle", item)
                        </div>
                    }
                    if (Model.Articles.PageCount > 1)
                    {
                        <div class="col-12 text-center mt-3">
                            @Html.PagedListPager(Model.Articles, page => Url.Action("ArticleCategory", new { page, url = Model.Category.Url }))
                        </div>
                    }
                }
                else
                {
                    <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
                }
            </div>
            <div class="col-lg-4">
                <div class="artilce-nav mb-4">
                    <div class="artilce-nav-title">
                        Tìm kiếm bài viết
                    </div>
                    <form action="@Url.Action("SearchArticle")" class="p-3">
                        <div class="input-group">
                            <input type="text" name="keyword" placeholder="Từ khóa" class="form-control" required=""/>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                    <div class="artilce-nav-title rounded-0">
                        Danh mục bài viết
                    </div>
                    <ul class="list list-unstyled list-product-nav">
                        @foreach (var item in Model.Categories.Where(a => a.ParentId == null))
                        {
                            <li class="p-2">
                                <a href="@Url.Action("ArticleCategory", new {url = item.Url})" class="list-product-cat">  @item.CategoryName <span class="glyphicon glyphicon-menu-down pull-right" aria-hidden="true"></span> </a>

                                @if (Model.Categories.Any(a => a.ParentId == item.Id))
                                {
                                    <i class="fas fa-sort-down down-arr"></i>
                                    <ul class="list list-unstyled list-product-subnav">
                                        @foreach (var child in Model.Categories.Where(a => a.ParentId == item.Id))
                                        {
                                            {
                                                <li> <a href="@Url.Action("ArticleCategory", new {url = child.Url})">@child.CategoryName</a> </li>

                                            }
                                        }
                                    </ul>
                                }
                            </li>
                        }
                    </ul>
                    <div class="artilce-nav-title rounded-0">
                        Bài viết mới nhất
                    </div>
                    @Html.Action("MenuArticle", "Home")
                </div>
            </div>
        </div>
    </div>
</section>