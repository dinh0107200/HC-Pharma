@model HC_Pharma.ViewModel.LandingPageViewModel
@using HC_Pharma.Models
@using Helpers
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = Model.Product.TitleMeta ?? Model.Product.Name;
    ViewBag.Description = Model.Product.DescriptionMeta ?? Model.Product.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("LandingPage", new { url = Model.Product.Url });

    if (Model.Product.ListImage != null)
    {
        ViewBag.ImagShare = Request.Url?.GetLeftPart(UriPartial.Authority) + Path.Combine("/images/products/"
            , Model.Product.ListImage.Split(',')[0]);
    }

    var delay = 200;
}
<div class="banner-landing">
    <div class="text-center">
        <h2 class="title-landing" data-aos="fade-up">
            @Model.LandingPage.Title
        </h2>
        <p class="title-landing-sub" data-aos="fade-up">@Model.LandingPage.SubTitle</p>
        <span class="title-landing-subline" data-aos="fade-up">
            @Model.LandingPage.SubTitle2
        </span>
    </div>
    <div class="container overflow-hidden">
        <div class="d-lg-flex">
            <div class="w-55">
                @foreach (var item in Model.Banners.Where(l => l.PostionAbout == PostionAbout.Banner).Take(1))
                {
                    <img src="@Path.Combine("/images/banners/", item.Image)" class="img-banner-langding" data-aos="fade-up"/>
                }
            </div>
            <div class="w-45">
                <form class="support-form landing-form" data-aos="fade-down">
                    <p>Đăng ký tư vấn</p>
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.Product.Id" name="ProductId"/>
                    <span>
                        Cần thêm thông tin về sản phẩm<br />
                        Hãy để lại SĐT để chúng tôi tư vấn cho bạn
                    </span>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Fullname" placeholder="Họ và tên" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Mobile" placeholder="Số điện thoại" />
                    </div>
                    <div class="text-center">
                        <button class="btn" type="submit">TƯ VẤN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<section class="intro-landing section-padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="title-landing-page " data-aos="fade-down">Probiotics Plus Hcpharma</h2>
                <div class="content-detail" data-aos="zoom-in">
                    @Html.Raw(Model.LandingPage.Intro)
                </div>
            </div>
            <div class="col-lg-6 text-center">
                @if (Model.LandingPage.ImageIntro != null)
                {
                    <img src="@Path.Combine("/images/landingPage/", Model.LandingPage.ImageIntro)" class=""  data-aos="zoom-in"/>
                }
            </div>
        </div>
    </div>
</section>

<section class="common-diseases section-padding">
    <div class="container">
        <div class="title-landing-page text-center text-uppercase" data-aos="fade-down" >
            Các bệnh thường gặp + dấu hiệu
        </div>
        <div class="sub-title-landing text-center"  data-aos="fade-down">
            @Model.LandingPage.CommonDiseases
        </div>
        <div class="row">
            @{
                var common = 1;
                delay = 0;
            }
            @foreach (var item in Model.Banners.Where(l => l.PostionAbout == PostionAbout.CommonDiseases))
            {
                <div class="col-lg-6">
                    <div class="common-diseases__item" data-aos="fade-right" data-aos-delay="@delay">
                        <div class="img">
                            @if (item.Image != null)
                            {
                                <img src="@Path.Combine("/images/banners/", item.Image)" class="" />
                            }
                        </div>
                        <div class="body">
                            <div class="number">
                                @if (common < 10)
                                {
                                    @("0"+common)
                                }
                                else
                                {
                                    @common

                                }
                            </div>
                            <div class="text">
                                <div class="name">@item.Name</div>
                                <div class="des">
                                    @item.Content
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                common++;
                delay += 50;

            }
        </div>
    </div>
</section>

<section class="cause-disease section-padding">
    <div class=" container">
        <div class="title-landing-page text-center text-uppercase" data-aos="fade-down">
            nguyên nhân gây bệnh
        </div>
        <div class="sub-title-landing text-center mb-4" data-aos="fade-down">
            @Model.LandingPage.CauseDisease
        </div>

        <div class="cause-disease-list">
            @{ 
                delay = 0;
            }
            @foreach (var item in Model.Banners.Where(l => l.PostionAbout == PostionAbout.CauseDisease))
            {
                <div class="cause-disease-item" data-aos="fade-right" data-aos-delay="@delay">
                    <div class="img">
                        @if (item.Image != null)
                        {
                            <img src="@Path.Combine("/images/banners/", item.Image)" class="" />
                        }
                    </div>
                    <div class="body">
                        <div class="name">
                            @item.Name
                        </div>
                        <div class="des">
                            @item.Content
                        </div>
                    </div>
                </div>
                delay += 50;
            }
        </div>
    </div>
</section>

