                </div>
            </div>

        </div>
    </div>
</div>
<div class="intro-landing section-padding">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <h2 class="title-landing-page" data-aos="fade-down">Phân tích sản phẩm</h2>
                <div class="content-detail" data-aos="zoom-in">
                    @Html.Raw(Model.LandingPage.ProductAnalysis)
                </div>
            </div>
            <div class="col-lg-6 text-center">
                @if (Model.LandingPage.ImageAnalysis != null)
