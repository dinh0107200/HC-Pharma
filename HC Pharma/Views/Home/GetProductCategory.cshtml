@model HC_Pharma.ViewModel.CategoryProductViewModel
@using PagedList.Mvc

@if (Model.Products.Any())
{
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-4 col-md-4 col-12">
                @Html.Partial("_ItemProduct", item)
            </div>
        }



    </div>
}
else
{
    <div class="col-12 mt-3">
        <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
    </div>
}
@if (Model.Products.PageCount > 1)
{
    <div class="col-12 text-center">
        @Html.PagedListPager(Model.Products, page => Url.Action("ProductCategory", new { page, url = Model.Url, catId = Model.CatId}))
    </div>
}
