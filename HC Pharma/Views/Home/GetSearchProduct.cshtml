@model HC_Pharma.ViewModel.SearchProductViewModel
@using PagedList.Mvc

@if (Model.Products.Any())
{
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-4 col-md-4 col-12">
                @Html.Partial("_ItemProduct", item)
            </div>
        }
    </div>
}
else
{
<div class="col-12">
    <h3 class="font-weight-bold text-danger text-uppercase">Không có kết quả</h3>
    <p>Xin lỗi, không có nội dung phù hợp với cụm từ tìm kiếm của bạn. Vui lòng thử lại với một số từ khóa khác.</p>
</div>
}
@if (Model.Products.PageCount > 1)
{
    <div class="col-12 text-center">
        @Html.PagedListPager(Model.Products, page => Url.Action("SearchProduct", new { page, keywords = Model.Keywords, catId = Model.CatId, }))
    </div>
}